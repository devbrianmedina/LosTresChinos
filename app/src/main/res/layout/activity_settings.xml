<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Contenedor de elementos de configuración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <!-- Sección 1: Idioma -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferencias de Idioma"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Elemento 1: Cambiar Idioma -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cambiar Idioma Predeterminado"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar idioma"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"/>
            </LinearLayout>

            <!-- Elemento 2: Tamaño de Texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tamaño de Texto"
                    android:textSize="18sp"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"/>
            </LinearLayout>

            <!-- Sección 2: Notificaciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"/>

            <!-- Elemento 1: Notificaciones Push -->
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recibir Notificaciones Push"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"/>

            <!-- Elemento 2: Sonido de Notificaciones -->
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonido de Notificaciones"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"/>

            <!-- Elemento 3: Vibración de Notificaciones -->
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibración de Notificaciones"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
